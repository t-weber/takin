clean:
	find bin -regex 'bin/[_a-zA-Z0-9]*' | xargs rm -f
	rm -f bin/*.exe
	rm -f obj/*.o
	rm -f ui/*.h
	rm -f *.moc
	rm -f libs/*.moc
	rm -f tools/taz/*.moc
	rm -f tools/res/*.moc
	rm -f tools/scanviewer/*.moc
	rm -f tools/scanpos/*.moc
	rm -f tools/powderfit/*.moc
	rm -f tools/monteconvo/*.moc
	rm -f tools/sglist/*.moc
	rm -f dialogs/*.moc
