# -----------------------------------------------------------------------------
# system-specific build flags

# which compiler?
CC = gcc
#CC = clang

# debug or unstable version?
DO_DEBUG = 0
IS_UNSTABLE = 0

# optimise specifically for THIS processor?
NATIVE_OPTS = 1

# which Qt and Qwt versions? Qt: 4 or 5, Qwt: 5 or 6
QT_VER = 4
QWT_VER = 6

# which Py version to use for scripting
#PY_INC_VER = 2.7
PY_INC_VER = 3.7m

PY_LIB_VER = ${PY_INC_VER}
#PY_BOOSTLIB_VER = $(subst .,,${PY_LIB_VER})
PY_BOOSTLIB_VER = $(word 1, $(subst ., ,${PY_LIB_VER}))
$(info Py boost lib: ${PY_BOOSTLIB_VER})

# use Lapack instead of internal linalg routines?
USE_LAPACK = 0

# compile the ogl code?
USE_3D = 1
REINIT_3D_HACK = 0

# compile the network code?
USE_NET = 1

# use boost's iostreams/regex/image lib?
USE_IOSTR = 1
USE_BOOST_REGEX = 0
USE_GIL = 1

# compile the python or julia interfaces?
USE_PY = 1
USE_JL = 0

# enable CIF support
USE_CIF = 1

# enable the plugin interface?
USE_PLUGINS = 1

# compile the faddeeva functions?
USE_FADDEEVA = 1

# which ABI to use: C++98 or C++11?
USE_CPP11_ABI = 1

# enable Framework libs
USE_FRAMEWORKS = 0

USE_CLP = 1

# is Minuit a non-standalone installation?
NON_STANDALONE_MINUIT_HACK = 0

# build tools needed for setup?
BUILD_SETUP_PROGS = 1
# build auxiliary tas tools?
BUILD_AUX_PROGS = 1


# local lib/inc overrides
MYLIB=~/lib
MYINC=~/include



# set possible system-dependent library suffixes...
BOOST_SUFFIX = 
#BOOST_SUFFIX = -mt
#QWT5_SUFFIX = 
QWT5_SUFFIX = -qt4
#QWT5_SUFFIX = 5-qt4

# ... and prefixes
JL_APP = /Applications/Julia-0.6.app/Contents/Resources/julia
# -----------------------------------------------------------------------------



STD_CPP = -std=c++11
#STD_CPP += -stdlib=libc++

ifeq ($(CC), gcc)
	MT_LIBS = -fopenmp -lrt
else
	MT_LIBS = -lpthread -lgomp -lrt
endif

STD_LIBS = -lstdc++
#STD_LIBS = -lc++ -lc++abi
STD_LIBS += -lm
ifeq ($(USE_FRAMEWORKS), 0)
	STD_LIBS += $(MT_LIBS)
endif

# -----------------------------------------------------------------------------


DEFINES = -DNO_JPEG -DNO_TIFF

# hack to prevent the math forward definitions
# in /usr/include/boost/math_fwd.hpp 
#DEFINES += -DBOOST_MATH_FWD_HPP


LIB_MIN = -lMinuit2

# libCore is only used for the error handler in the non-standalone minuit
ifeq ($(NON_STANDALONE_MINUIT_HACK), 1)
	LIB_MIN += -lCore
	DEFINES += -DNON_STANDALONE_MINUIT
endif

ifeq ($(IS_UNSTABLE), 1)
	DEFINES += -DIS_EXPERIMENTAL_BUILD
endif

ifeq ($(USE_3D), 1)
	DEFINES += -DUSE_3D -DUSE_MULTI_TEXTURES
else
	DEFINES += -DNO_3D
endif

ifeq ($(REINIT_3D_HACK), 1)
	DEFINES += -DREINIT_3D_DLGS
endif

ifeq ($(USE_NET), 1)
	DEFINES += -DUSE_NET
else
	DEFINES += -DNO_NET
endif

ifeq ($(USE_IOSTR), 1)
	DEFINES += -DUSE_IOSTR
else
	DEFINES += -DNO_IOSTR
endif

ifeq ($(USE_BOOST_REGEX), 1)
	DEFINES += -DUSE_BOOST_REX
endif

ifeq ($(USE_PY), 1)
	DEFINES += -DUSE_PY
else
	DEFINES += -DNO_PY
endif

ifeq ($(USE_JL), 1)
	DEFINES += -DUSE_JL
else
	DEFINES += -DNO_JL
endif

ifeq ($(USE_CIF), 1)
	DEFINES += -DUSE_CIF
else
	DEFINES += -DNO_CIF
endif

ifeq ($(USE_GIL), 1)
	DEFINES += -DUSE_GIL
else
	DEFINES += -DNO_GIL
endif

ifeq ($(USE_PLUGINS), 1)
	DEFINES += -DUSE_PLUGINS
else
	DEFINES += -DNO_PLUGINS
endif

ifeq ($(USE_FRAMEWORKS), 1)
	DEFINES += -DUSING_FRAMEWORKS
endif

DEFINES += -DQWT_VER=$(QWT_VER)
DEFINES += -DQT_VER=$(QT_VER)
DEFINES += -DPY_VER=$(PY_INC_VER)


# -----------------------------------------------------------------------------


ifeq ($(QT_VER), 5)	# qt 5
	QT_INC =-I${MYINC}/qt5 \
			-I${MYINC}/qt5/QtCore \
			-I${MYINC}/qt5/QtWidgets \
			-I${MYINC}/qt5/QtGui \
			-I${MYINC}/qt5/QtOpenGL \
			-I/usr/local/opt/qt5/Frameworks/QtOpenGL.framework/Versions/5/Headers \
			-I/usr/local/opt/qt5/Frameworks/QtWidgets.framework/Versions/5/Headers \
			-I/usr/local/opt/qt5/Frameworks/QtCore.framework/Versions/5/Headers \
			-I/usr/local/opt/qt5/Frameworks/QtGui.framework/Versions/5/Headers \
			-I/System/Library/Frameworks/OpenGL.framework/Versions/A/Headers \
			-I/usr/local/opt/qt5/include \
			-I/opt/local/libexec/qt5/include \
			-I/opt/local/libexec/qt5/include/QtCore \
			-I/opt/local/libexec/qt5/include/QtGui \
			-I/opt/local/libexec/qt5/include/QtOpenGL \
			-I/usr/include/qt5 \
			-I/usr/include/qt5/QtCore \
			-I/usr/include/qt5/QtWidgets \
			-I/usr/include/qt5/QtGui \
			-I/usr/include/qt5/QtOpenGL \
			-I/usr/include/qt \
			-I/usr/include/qt/QtCore \
			-I/usr/include/qt/QtWidgets \
			-I/usr/include/qt/QtGui \
			-I/usr/include/qt/QtOpenGL

	QT_LIB =-L${MYLIB}/qt5 \
			-L${MYLIB}/qt5/lib \
			-L/opt/local/libexec/qt5/lib \
			-L/usr/lib64/qt5 \
			-L/usr/lib/qt5/lib
	ifeq ($(USE_FRAMEWORKS), 0)
			QT_LIB += -lQt5Widgets -lQt5Gui -lQt5Core -lQt5Svg -lQt5Concurrent
	else
			QT_LIB += -F/usr/local/opt/qt5/lib \
				-framework QtWidgets -framework QtGui \
				-framework QtCore -framework QtSvg \
				-framework QtConcurrent
	endif

	ifeq ($(USE_3D), 1)
		ifeq ($(USE_FRAMEWORKS), 0)
			QT_LIB += -lQt5OpenGL
		else
			QT_LIB += -framework OpenGL -framework QtOpenGL
		endif
	endif

else	# qt4

	QT_INC =	-I${MYINC}/qt4 \
			-I${MYINC}/qt4/QtCore \
			-I${MYINC}/qt4/QtGui \
			-I${MYINC}/qt4/QtOpenGL \
			-I${MYINC}/QtCore \
			-I${MYINC}/QtGui \
			-I${MYINC}/QtOpenGL \
			-I/usr/local/opt/qt4/Frameworks/QtOpenGL.framework/Versions/4/Headers \
			-I/usr/local/opt/qt4/Frameworks/QtWidgets.framework/Versions/4/Headers \
			-I/usr/local/opt/qt4/Frameworks/QtCore.framework/Versions/4/Headers \
			-I/usr/local/opt/qt4/Frameworks/QtGui.framework/Versions/4/Headers \
			-I/usr/local/opt/qt4/include \
			-I/opt/local/libexec/qt4/include \
			-I/opt/local/libexec/qt4/include/QtCore \
			-I/opt/local/libexec/qt4/include/QtGui \
			-I/opt/local/libexec/qt4/include/QtOpenGL \
			-I/usr/include/qt4 \
			-I/usr/include/qt4/QtCore \
			-I/usr/include/qt4/QtGui \
			-I/usr/include/qt4/QtOpenGL \
			-I/usr/include/QtCore \
			-I/usr/include/QtGui \
			-I/usr/include/QtOpenGL

	QT_LIB = -L${MYLIB}/qt4 -L${MYLIB}/qt4/lib \
		-L/opt/local/libexec/qt4/lib -L/usr/lib64/qt4 -L/usr/lib/qt4/lib

	ifeq ($(USE_FRAMEWORKS), 0)
			QT_LIB += -lQtCore -lQtGui -lQtSvg
	else
			QT_LIB += -F/usr/local/opt/qt4/lib \
				-framework QtGui -framework QtCore -framework QtSvg
	endif

	ifeq ($(USE_3D), 1)
		ifeq ($(USE_FRAMEWORKS), 0)
			QT_LIB += -lQtOpenGL
		else
			QT_LIB += -framework OpenGL -framework QtOpenGL			
		endif
	endif
endif


ifeq ($(QWT_VER), 6)
	ifeq ($(QT_VER), 5)
		QWT_INC =	-I${MYINC}/qwt \
				-I${MYINC}/qwt-qt5 \
				-I/usr/local/opt/qwt/lib/qwt.framework/Versions/6/Headers \
				-I/opt/local/libexec/qt5/include/qwt \
				-I/usr/local/include/qwt \
				-I/usr/include/qt5/qwt \
				-I/usr/include/qwt-qt5 \
				-I/usr/include/qwt
		ifeq ($(USE_FRAMEWORKS), 0)
			QWT_LIB = -lqwt-qt5
			#QWT_LIB = -lqwt
		else
			QWT_LIB = -F/usr/local/opt/qwt/lib -framework qwt
		endif
	else
		QWT_INC =	-I${MYINC}/qwt \
				-I${MYINC}/qwt-qt4 \
				-I/usr/local/opt/qwt/lib/qwt.framework/Versions/6/Headers \
				-I/opt/local/libexec/qt4/include/qwt \
				-I/usr/local/include/qwt6 \
				-I/usr/local/include/qwt \
				-I/usr/include/qwt6 \
				-I/usr/include/qwt \
				-I/usr/include/qwt-qt4 \
				-I/usr/local/qwt/include
		ifeq ($(USE_FRAMEWORKS), 0)
			QWT_LIB = -L/usr/local/qwt/lib -lqwt
		else
			QWT_LIB = -F/usr/local/opt/qwt/lib -framework qwt
		endif
	endif
else
	QWT_INC =	-I${MYINC}/qwt5 \
			-I${MYINC}/qwt-qt4 \
			-I${MYINC}/qwt5-qt4 \
			-I/usr/local/opt/qwt/lib/qwt.framework/Versions/5/Headers \
			-I/usr/include/qwt5 \
			-I/usr/include/qwt-qt4 \
			-I/usr/include/qwt5-qt4 \
			-I/usr/local/qwt/include
	ifeq ($(USE_FRAMEWORKS), 0)
		QWT_LIB = -L/usr/local/qwt/lib -lqwt${QWT5_SUFFIX}
	else
		QWT_LIB = -F/usr/local/opt/qwt/lib -framework qwt
	endif
endif



INC =	-I${MYINC} \
	${QT_INC} ${QWT_INC} -I . -I ./3rdparty/ \
	-I/usr/local/opt/minuit2/include/Minuit2 \
	-I/opt/local/include -I/opt/local/include/GL \
	-I/usr/local/include -I/usr/local/include/GL \
	-I/opt/include  -I/opt/include/GL \
	-I/usr/local/opt/freetype/include/freetype2 \
	-I/usr/include/freetype2 \
	-I/usr/include/lapacke \
	-I/usr/local/opt/python/Frameworks/Python.framework/Versions/${PY_INC_VER}/Headers/ \
	-I/usr/include/python${PY_INC_VER} -idirafter /usr/include/root \
	-I/usr/include -I/usr/include/GL

LIB_DIRS =	-L${MYLIB} \
		-L/usr/local/opt/minuit2/lib/ \
		-L/usr/local/opt/freetype/lib \
		-L/opt/local/lib -L/opt/lib \
		-L/usr/local/lib -L/usr/local/lib64 \
		-L/usr/lib64 -L/usr/lib64/root \
		-L/usr/lib/x86_64-linux-gnu



ifeq ($(DO_DEBUG), 0)
	FLAGS = ${INC} -O2 ${STD_CPP} -DNDEBUG -Wall -Wpedantic -Wextra -fPIC
	ifeq ($(NATIVE_OPTS), 1)
		FLAGS += -march=native
	else
		FLAGS += -mtune=native
	endif
	FLAGS += -ffast-math
	#FLAGS += -flto -fexpensive-optimizations
	FLAGS += -DQT_NO_DEBUG
	FLAGS += ${DEFINES}
	STRIP = strip -v 
else
	FLAGS = ${INC} ${STD_CPP} -rdynamic -ggdb -DDEBUG -Wall -Wall -Wpedantic -Wextra -Weffc++ -fPIC ${DEFINES}
	STRIP = echo Retaining debug symbols of 
endif

ifeq ($(CC), clang)
	# workaround for boost-gil/clang incompatibility
	FLAGS += -Wno-c++11-narrowing
endif


ifeq ($(USE_CPP11_ABI), 1)
	FLAGS += -D_GLIBCXX_USE_CXX11_ABI
endif



ifeq ($(USE_LAPACK), 1)
	DEFINES += -DUSE_LAPACK
	LAPACK_LIBS = -llapacke -llapack
	#LAPACK_LIBS += -lblas -lgfortran
else
	DEFINES += -DNO_LAPACK
	LAPACK_LIBS = 
endif

# actually: boost libs...
BASIC_LIBS = -lboost_system${BOOST_SUFFIX} -lboost_filesystem${BOOST_SUFFIX}

ifeq ($(USE_FRAMEWORKS), 0)
	X11_LIBS = -lX11
else
	X11_LIBS = 
endif

ifeq ($(USE_3D), 1)
	ifeq ($(USE_FRAMEWORKS), 0)
		GL_LIBS = ${X11_LIBS} -lGL -lfreetype
	else
		GL_LIBS = ${X11_LIBS} -lfreetype
	endif
else
	GL_LIBS = 
endif


ifeq ($(USE_IOSTR), 1)
	BASIC_LIBS += -lboost_iostreams${BOOST_SUFFIX}
endif

ifeq ($(USE_BOOST_REGEX), 1)
	BASIC_LIBS += -lboost_regex${BOOST_SUFFIX}
endif

ifeq (${USE_FADDEEVA}, 1)
	FAD_DEFS += -DHAS_COMPLEX_ERF
	FAD_LIBS += ./3rdparty/Faddeeva.cc
else
	FAD_DEFS =
	FAD_LIBS =
endif

ifeq ($(USE_PY), 1)
	PY_LIBS = -lboost_python${PY_BOOSTLIB_VER}${BOOST_SUFFIX}
	#PY_LIBS = -lboost_python${BOOST_SUFFIX}

	ifeq ($(USE_FRAMEWORKS), 0)
		PY_LIBS += -lpython${PY_LIB_VER}
	else
		ifeq ($(PY_INC_VER), 2.7)
			PY_LIBS += -F /usr/local/opt/python/Frameworks -framework Python
		else
			PY_LIBS += -L/usr/local/opt/python/Frameworks/Python.framework/Versions/${PY_INC_VER}/lib -lpython${PY_LIB_VER}
		endif
	endif

	PY_OBJS = obj/sqw_py.o 
else
	PY_LIBS =
	PY_OBJS =
endif

ifeq ($(USE_JL), 1)
	JL_LIBS = -L${JL_APP}/lib -ljulia
	JL_OBJS = obj/sqw_jl.o 
	JL_INC = -I/usr/local/include/julia -I/usr/include/julia -I${JL_APP}/include/julia
else
	JL_LIBS =
	JL_OBJS =
	JL_INC =
endif

ifeq ($(USE_GIL), 1)
	GIL_LIBS = -lpng #-ljpeg -ltiff
else
	GIL_LIBS =
endif

ifeq ($(USE_PLUGINS), 1)
	DL_LIBS = -ldl
else
	DL_LIBS =
endif

ifeq ($(USE_CLP), 1)
	DEFINES += -DUSE_CLP
	CLP_LIBS = -lclipper-core
else
	DEFINES += -DNO_CLP
	CLP_LIBS = 
endif

LIBS_TAZ = ${BASIC_LIBS} ${FAD_LIBS} ${QT_LIB} ${QWT_LIB} ${GL_LIBS} \
	${PY_LIBS} ${JL_LIBS} ${GIL_LIBS} ${DL_LIBS} ${LAPACK_LIBS} ${STD_LIBS}



# -----------------------------------------------------------------------------



